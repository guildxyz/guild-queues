{
  "name": "@guildxyz/queues",
  "version": "1.0.0",
  "description": "Redis-based distributed message queue library for Guild.xyz's backend infrastructure.",
  "main": "./build/src/index.js",
  "types": "./build/src/index.d.ts",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "clean": "rm -rf ./node_modules ./build"
  },
  "dependencies": {
    "redis": "^4.6.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-typescript-enum": "^2.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.5",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix --cache --cache-location 'node_modules/.cache/.eslintcache'",
    "*.{js,ts,md}": "pretty-quick --staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/*.test.ts"
    ],
    "setupFiles": [
      "dotenv/config"
    ],
    "testTimeout": 10000
  }
}
